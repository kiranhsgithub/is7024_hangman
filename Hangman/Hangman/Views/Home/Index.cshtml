
@{
    ViewBag.Title = "Home Page";
}

<div data-ng-controller="HomeController">

    <div class="container">
        <div class="jumbotron2">
            <h1>
                <span class="hang r">H</span>
                <span class="hang g">A</span>
                <span class="hang y">N</span>
                <span class="hang g">G</span>
                <span class="hang r">M</span>
                <span class="hang y">A</span>
                <span class="hang r">N</span>
            </h1>
            <p class="lead">Welcome to the home of HangMan, a simple word game!</p>
        </div>
    </div>


    <div class="jumbotron category-selection-custom">

        <!--<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.3/angular.min.js"></script>
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.3/angular-route.min.js"></script>
        <script type="text/javascript" src="~/Scripts/app/app-module.js"></script>
        <script type="text/javascript" src="~/Scripts/app/categories-details-controller.js"></script>


        <div>
            <small>Enter name in box</small>
            <br>
            <p><input type="text" ng-model="playername" placeholder="Name" class="ng-pristine ng-valid"></p>
            <p class="lead">Hello <b>{{playername}}</b>. Select a Category to start Playing.</p>
        </div-->

        <div class="row">
            <div class="col-md-3">
                Select Difficulty Level:
            </div>
            <div class="col-md-6">
                <div class="btn-group" data-toggle="buttons">
                    <label class="btn btn-default active">
                        <input type="radio" name="options" data-ng-click="level=1" id="option1" autocomplete="off" checked> Beginner
                    </label>
                    <label class="btn btn-default">
                        <input type="radio" name="options" data-ng-click="level=2" id="option2" autocomplete="off"> Intermediate
                    </label>
                    <label class="btn btn-default">
                        <input type="radio" name="options" data-ng-click="level=3" id="option3" autocomplete="off"> Advanced
                    </label>
                </div>
            </div>
        </div>
        
        <p>Select Category:</p>

        <!-- <p class="lead">Select a Category to start Playing</p> -->
        <section>
            <div class="row">
                <div class="col-xs-6 col-md-3 hand" data-ng-click="redirect(7)">
                    <div class="thumbnail">
                        <img src="~/Content/random.jpg" alt="random" id="random">
                    </div>
                    Random
                </div>

                <div class="col-xs-6 col-md-3 hand" data-ng-click="redirect(4)">
                    <div class="thumbnail" >
                        <img src="~/Content/sports.png" alt="sports" id="sports">
                    </div>
                    Sports
                </div>

                <div class="col-xs-6 col-md-3 hand" data-ng-click="redirect(1)">
                    <div class="thumbnail">
                        <img src="~/Content/states.jpg" alt="states" id="states">
                    </div>
                    States
                </div>

                <div class="col-xs-6 col-md-3 hand" data-ng-click="redirect(2)">
                    <div class="thumbnail">
                        <img src="~/Content/fruits.png" alt="fruits">
                    </div>
                    Fruits & Vegetables
                </div>

                <div class="col-xs-6 col-md-3 hand" data-ng-click="redirect(6)">
                    <div class="thumbnail">
                        <img src="~/Content/astronomy.gif" alt="astronomy" ng-click="category = 5">
                    </div>
                    Astronomy
                </div>

                <div class="col-xs-6 col-md-3 hand" data-ng-click="redirect(5)">
                    <div class="thumbnail" >
                        <img src="~/Content/animals.jpg" alt="animals" ng-click="category = 6">
                    </div>
                    Animals
                </div>
                <p>{{category}} </p>

            </div>
        </section>

    </div>
</div>
